@model Blog.ViewModel.PostEditViewModel
@{
    ViewData["Title"] = "Edit new post";
}
<h1>Edit Post</h1>
<form enctype="multipart/form-data" asp-controller="Blog" asp-action="Edit" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistImgPath" />
    <div class="form-group row">
        <label asp-for="Author" class="col-sm-2 col-form-label">Author</label>
        <div class="col-sm-10">
            <input asp-for="Author" class="form-control" placeholder="Author" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Title" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PrewText" class="col-sm-2 col-form-label">Preview</label>
        <div class="col-sm-10">
            <textarea asp-for="PrewText" class="form-control" placeholder="Preview"></textarea>
            <span asp-validation-for="PrewText" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FullText" class="col-sm-2 col-form-label">Full Post</label>
        <div class="col-sm-10">
            <textarea asp-for="FullText" class="form-control" placeholder="Full text"></textarea>
            <span asp-validation-for="FullText" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Img" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Img" class="form-control custom-file-input">
                <label class="custom-file-label">Click to change photo</label>
            </div>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="form-group row">
            <button type="submit" class="btn btn-info">Update</button>
            <a asp-controller="Blog" asp-action="Blog" class="btn btn-danger">Cancel</a>
        </div>

    </div>
</form>
